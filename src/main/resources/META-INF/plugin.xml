<idea-plugin>
  <id>io.github.v-zacek.phpcore-support</id>
  <name>Phpcore support</name>
  <vendor url = "https://github.com/v-zacek/">v-zacek</vendor>
  <version>1.1.0</version>

  <idea-version since-build = "250" until-build = "252.*"/>

  <depends>com.intellij.modules.platform</depends>
  <depends>com.jetbrains.php</depends>

  <extensions defaultExtensionNs = "com.intellij">
    <psi.referenceContributor implementation = "FormClassReference.FormClassReferenceContributor"/>
    <psi.referenceContributor implementation = "FormFunctionReference.FormLogicFunctionReferenceContributor"/>
    <psi.referenceContributor implementation = "LogicClassFunctionReference.LogicClassFunctionReferenceContributor"/>
    <psi.referenceContributor implementation = "FormRequestReference.FormRequestReferenceContributor"/>
  </extensions>

  <actions>
    <action
      class = "XmlAction.InsertXmlItemAction"
      text = "Form Item"
      description = "Insert form item scaffolding"
    >
      <add-to-group group-id = "GenerateGroup" anchor = "first"/>
    </action>
  </actions>
</idea-plugin>
