<idea-plugin>
  <id>io.github.v-zacek.phpcore-support</id>
  <name>Phpcore support</name>
  <vendor url = "https://github.com/v-zacek/">v-zacek</vendor>
  <version>1.1.0</version>

  <idea-version since-build = "250" until-build = "252.*"/>

  <depends>com.intellij.modules.platform</depends>
  <depends>com.jetbrains.php</depends>

  <extensions defaultExtensionNs = "com.intellij">
    <psi.referenceContributor implementation = "reference.form.phpclass.FormClassReferenceContributor"/>
    <psi.referenceContributor implementation = "reference.form.function.FormLogicFunctionReferenceContributor"/>
    <psi.referenceContributor implementation = "reference.logic.function.LogicClassFunctionReferenceContributor"/>
    <psi.referenceContributor implementation = "reference.form.request.FormRequestReferenceContributor"/>
  </extensions>

  <actions>
    <action
      class = "action.xmlForm.InsertXmlItemAction"
      text = "Form Item"
      description = "Insert form item scaffolding"
    >
      <add-to-group group-id = "GenerateGroup" anchor = "first"/>
    </action>

    <action
      class = "action.xmlForm.InsertXmlFormAction"
      text = "Form Definition"
      description = "Insert singleform/multiform definition"
    >
      <add-to-group group-id = "GenerateGroup" anchor = "after" relative-to-action = "InsertXmlItemAction"/>
    </action>

    <action
      class = "action.createfile.CreateSingleformFileAction"
      text = "Singleform"
      description = "Create new Singleform"
    >
      <add-to-group group-id = "NewGroup" anchor = "after" relative-to-action = "NewFile"/>
    </action>

    <action
      class = "action.createfile.CreateMultiformFileAction"
      text = "Multiform"
      description = "Create new Multiform"
    >
      <add-to-group group-id = "NewGroup" anchor = "after" relative-to-action = "NewFile"/>
    </action>

    <action
      class = "action.createfile.CreateDbModelFileAction"
      text = "DbModel"
      description = "Create new DbModel"
    >
      <add-to-group group-id = "NewGroup" anchor = "after" relative-to-action = "NewFile"/>
    </action>

    <action
      class = "action.createfile.CreatePageFileAction"
      text = "Page"
      description = "Create new Page"
    >
      <add-to-group group-id = "NewGroup" anchor = "after" relative-to-action = "NewFile"/>
    </action>
  </actions>
</idea-plugin>
